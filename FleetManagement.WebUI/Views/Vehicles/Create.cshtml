@model FleetManagement.Application.DTOs.VehicleInputDTO

@{
    ViewData["Title"] = "Register new Vehicle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ChassisSeries" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ChassisSeries" class="form-control" />
                <span asp-validation-for="ChassisSeries" class="text-danger"></span>
            </div>
            <label asp-for="ChassisNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ChassisNumber" class="form-control" />
                <span asp-validation-for="ChassisNumber" class="text-danger"></span>
            </div>
            <label asp-for="ColorId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
            </div>
            <label asp-for="VehicleTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeId"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>